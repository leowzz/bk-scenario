.PHONY: help install run build preview clean

help:
	@echo "Targets:"
	@echo "  install  Install frontend dependencies"
	@echo "  run      Start Vite dev server"
	@echo "  build    Build frontend assets"
	@echo "  preview  Preview production build"
	@echo "  clean    Remove node_modules and build output"

install:
	npm install

run:
	npm run dev

build:
	npm run build

preview:
	npm run preview

clean:
	rm -rf node_modules dist
